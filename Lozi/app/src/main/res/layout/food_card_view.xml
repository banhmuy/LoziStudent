<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:card_view="http://schemas.android.com/tools"
	card_view:cardCornerRadius="8dp"
	android:layout_marginBottom="16dp"
	android:layout_marginTop="16dp">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<android.support.v7.widget.AppCompatImageView
			android:id="@+id/imgFood"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="0dp"
			android:padding="0dp"
			app:layout_constraintBottom_toTopOf="@id/tvNameFood"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@mipmap/food_tra_sua_an_vat"
			android:scaleType="centerCrop"/>

		<android.support.v7.widget.AppCompatTextView
			android:id="@+id/tvNameFood"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="8dp"
			android:padding="4dp"
			android:text="@string/food_tra_sua_an_va"
			android:textAlignment="center"
			android:textSize="10sp"
			android:textStyle="bold"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="8dp" />

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#9c9c97"/>

			<android.support.v7.widget.AppCompatTextView
				android:id="@+id/tvDecribe"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/food_decribe"
				android:textAlignment="center"
				android:textSize="10sp"
				android:layout_marginLeft="16dp"
				android:layout_marginBottom="8dp"
				android:layout_marginTop="8dp"
				android:layout_marginRight="8dp"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:weightSum="10"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="8dp">
				<android.support.v7.widget.AppCompatTextView
					android:layout_weight="7"
					android:id="@+id/tvPrice"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:layout_marginBottom="8dp"
					android:layout_marginTop="8dp"
					android:layout_marginRight="8dp"
					android:text="@string/food_price"
					android:textAlignment="center"
					android:textSize="10sp"/>

				<ImageButton
					android:id="@+id/ibBuy"
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_weight="3"
					android:background="@null"
					android:backgroundTint="@null"
					android:tint="@color/colorAccent"
					app:srcCompat="@drawable/ic_store"
					android:padding="4dp"
					android:layout_margin="4dp"/>
			</LinearLayout>

		</LinearLayout>

</android.support.v7.widget.CardView>